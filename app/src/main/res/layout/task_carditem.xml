<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_cardview_itemfirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout

            android:id="@+id/rl_task_inner_carditems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Jul 4,"
                android:textColor="#e35249"
                android:textSize="15sp" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/month"
                android:text=" 2016,"
                android:textColor="#e35249"
                android:textSize="15sp" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/year"
                android:text=" 02:00 PM"
                android:textColor="#e35249"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/taskname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/month"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Workshop"
                android:textColor="#f8bd6f"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/taskname"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Test Note for testing"
                android:textSize="14sp" />

            <ImageView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:id="@+id/tick"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/tick"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/imageView2"
                android:layout_alignStart="@+id/imageView2" />

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tick"
                android:layout_marginTop="3dp"
                android:src="@drawable/icon_user"
                android:id="@+id/imageView2" />
        </RelativeLayout>

       <!-- <View
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/rl_task_inner_carditems"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d3d3d3"/>-->
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_cardview_itemsecond"
        android:layout_below="@+id/rl_cardview_itemfirst"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:background="#f2f2f2"
            android:id="@+id/rl_task_inner_carditems_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/month_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Aug 4,"
                android:textColor="#e35249"
                android:textSize="15sp" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/year_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/month_second"
                android:text=" 2016,"
                android:textColor="#e35249"
                android:textSize="15sp" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/time_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/year_second"
                android:text=" 08:00 PM"
                android:textColor="#e35249"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/taskname_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/month_second"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Workshop"
                android:textColor="#f8bd6f"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/taskname_second"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Test"
                android:textSize="14sp" />

            <ImageView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:id="@+id/tick_second"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/tick"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/imageView2_second"
                android:layout_alignStart="@+id/imageView2_second" />

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tick_second"
                android:layout_marginTop="3dp"
                android:src="@drawable/icon_user"
                android:id="@+id/imageView2_second" />
        </RelativeLayout>

       <!-- <View
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/rl_task_inner_carditems_second"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d3d3d3"/>-->
    </RelativeLayout>



    </RelativeLayout>

