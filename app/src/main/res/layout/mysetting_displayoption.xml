                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/rl_contacts"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#d5d8dc"/>

            <RelativeLayout
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/view_displayoptioncont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_appointments"
                >

                <TextView
                    android:textColor="#414141"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_appointments"
                    android:text="Appointments:"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_margin="10dp"
                    android:src="@drawable/icon_green_tick"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/image_appointments"
                    android:layout_centerHorizontal="true" />

                <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/image_appointments"
                    android:layout_width="wrap_content"
