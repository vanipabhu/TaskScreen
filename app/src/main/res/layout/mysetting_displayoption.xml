<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:id="@+id/rl_heading_display"
        >
        <ImageView
            android:backgroundTint="#fff"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/menubar_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_navi_displayoption"/>


        <TextView
            android:id="@+id/txt_displayoption"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display option"
            android:layout_alignTop="@+id/txt_chngepassworddone"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/rl_heading_display"
        android:id="@+id/rl_screenfirst"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/txt_screen"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Screen"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/txt_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rl_displaystartscreen">
            <TextView
                android:layout_marginRight="5dp"
                android:textSize="16sp"
                android:text="Contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_displayoptionstart"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/imageViewcontact"
                android:layout_toStartOf="@+id/imageViewcontact" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_dropdown_big"
                android:id="@+id/imageViewcontact"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_secondlayout"
        android:layout_below="@+id/rl_screenfirst"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#e9f1ff"
        >

        <TextView
            android:textColor="#414141"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_menu"
            android:text="Menu Option"
            android:layout_centerVertical="true" />

        <TextView
            android:textColor="#414141"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_display"
            android:text="Display"
            android:layout_alignTop="@+id/text_menu"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textColor="#414141"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_tab"
            android:text="Tab"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="40dp" />

    </RelativeLayout>


    <ScrollView
        android:layout_below="@+id/rl_secondlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
