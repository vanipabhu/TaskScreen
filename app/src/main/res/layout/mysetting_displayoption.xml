                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_dropdown_big"
                        android:id="@+id/img_delegeopp_Appo" />
                </RelativeLayout>

            </RelativeLayout>
            <View
                android:id="@+id/view_displayoptionApp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/rl_appointments"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#d5d8dc"/>

            <RelativeLayout
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/view_displayoptionApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_call_list">

                <TextView
                    android:textColor="#414141"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_call_list"
                    android:text="Call List:"
                    android:textSize="16sp"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:src="@drawable/icon_green_tick"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/image_call"
                    android:background="@android:color/transparent"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />





            </RelativeLayout>

            <View
                android:id="@+id/view_displayoptioncall"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/rl_call_list"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#d5d8dc"/>

