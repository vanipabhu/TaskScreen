                    android:layout_centerVertical="true"
                    android:layout_margin="10dp" />

                <ImageView
                    android:src="@drawable/icon_green_tick"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/image_contact"
                    android:background="@android:color/transparent"
                    android:layout_alignBottom="@+id/txt_contacts"
                    android:layout_centerHorizontal="true" />

                <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/image_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginRight="5dp"
                        android:textSize="16sp"
                        android:text="Details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_displayoptionContact"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/img_delegeopp_contact"
                        android:layout_toStartOf="@+id/img_delegeopp_contact" />
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_dropdown_big"
                        android:id="@+id/img_delegeopp_contact" />
                </RelativeLayout>

                </RelativeLayout>
            <View
