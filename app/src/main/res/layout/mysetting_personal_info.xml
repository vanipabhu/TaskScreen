                    android:layout_height="wrap_content"
                    android:id="@+id/img_mysetpersonal_email"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_add_contact"/>

                <TextView
                    android:layout_toRightOf="@+id/img_mysetpersonal_email"
                    android:layout_below="@+id/view_mysetpersonal_phone"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#414141"
                    android:id="@+id/txt_mysetpersonal_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textSize="16sp"

