                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    />
                <View

                    android:id="@+id/view_mysetpersonal_city"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/txt_mysetpersonal_city"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="#c4c4c4"/>

                <TextView
                    android:layout_below="@+id/view_mysetpersonal_city"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#414141"
                    android:id="@+id/txt_mysetpersonal_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Region/state:"
                    android:textSize="16sp"
                    />
                <EditText
                    android:layout_below="@+id/view_mysetpersonal_city"
                    android:cursorVisible="false"
                    android:id="@+id/edt_mysetpersonal_region"
                    android:layout_toRightOf="@+id/txt_mysetpersonal_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="10dp"
                    />
                <View
                    android:id="@+id/view_mysetpersonal_region"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/txt_mysetpersonal_region"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="#c4c4c4"/>

                <TextView
                    android:layout_below="@+id/view_mysetpersonal_region"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#414141"
                    android:id="@+id/txt_mysetpersonal_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country:"
                    android:textSize="16sp"
                    />
                <ImageView
                    android:layout_below="@+id/view_mysetpersonal_region"
                    android:cursorVisible="false"
                    android:id="@+id/img_mysetpersonal_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/icon_dropdown"
                    android:background="@android:color/transparent"
                    />
                <View

