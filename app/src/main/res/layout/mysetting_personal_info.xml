                    android:id="@+id/view_mysetpersonal_street"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/txt_mysetpersonal_street"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="#c4c4c4"/>

                <TextView
                    android:layout_below="@+id/view_mysetpersonal_street"
                    android:textColor="#414141"
                    android:id="@+id/txt_mysetpersonal_zipcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zipcode:"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="10dp"
                    />
                <EditText
                    android:layout_below="@+id/view_mysetpersonal_street"
                    android:cursorVisible="false"
                    android:id="@+id/edt_mysetpersonal_zipcode"
                    android:layout_toRightOf="@+id/txt_mysetpersonal_zipcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    />
                <View
                    android:id="@+id/view_mysetpersonal_zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/txt_mysetpersonal_zipcode"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="#c4c4c4"/>

                <TextView
                    android:layout_below="@+id/view_mysetpersonal_zipcode"
                    android:textColor="#414141"
                    android:id="@+id/txt_mysetpersonal_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="city:"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"

                    />
                <EditText
                    android:layout_below="@+id/view_mysetpersonal_zipcode"
                    android:cursorVisible="false"
                    android:id="@+id/edt_mysetpersonal_city"
                    android:layout_toRightOf="@+id/txt_mysetpersonal_city"
