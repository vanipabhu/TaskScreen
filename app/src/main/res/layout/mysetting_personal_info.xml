                    android:layout_alignRight="@+id/edt_mysetpersonal_lastname"
                    android:layout_alignEnd="@+id/edt_mysetpersonal_lastname"
                    android:layout_alignTop="@+id/edt_mysetpersonal_work" />
                <View
                    android:id="@+id/view_mysetpersonal_work"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@+id/edt_mysetpersonal_work"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="#c4c4c4"/>

                <TextView
                    android:layout_below="@+id/view_mysetpersonal_work"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#414141"
                    android:id="@+id/txt_mysetpersonal_street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
