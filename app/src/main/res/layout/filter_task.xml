<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#f8bd6f"
        android:id="@+id/rl_task_filter"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/txt_filter_cancel"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:textColor="#fff"
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>

        <TextView
            android:gravity="center"
            android:id="@+id/txt_filter"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_alignTop="@+id/txt_filter_cancel"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/txt_filter_done"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="Done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_filter_cancel"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/rl_task_filter"
        android:id="@+id/rl_filter_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="50dp"
            android:textColor="#f8bd6f"
            android:textSize="18sp"
            android:text="All"
            android:id="@+id/txt_filter_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view_filter_all"
            android:layout_alignStart="@+id/view_filter_all"
            android:layout_marginStart="50dp" />

        <ImageView
            android:padding="8dp"
            android:src="@drawable/icon_tick_active"
            android:id="@+id/image_filter_all"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/txt_filter_all"
            android:layout_alignRight="@+id/view_filter_all"
            android:layout_alignEnd="@+id/view_filter_all" />

        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/txt_filter_all"
            android:id="@+id/view_filter_all"
            android:background="#d3d3d3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/txt_filter_none"
            android:layout_below="@+id/view_filter_all"
            android:textColor="#414141"
            android:textSize="18sp"
            android:text="None"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/image_filter_all"
            android:layout_alignEnd="@+id/image_filter_all"
            android:layout_alignLeft="@+id/txt_filter_all"
            android:layout_alignStart="@+id/txt_filter_all" />

        <View
            android:id="@+id/view_filter_none"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/txt_filter_none"
            android:background="#d3d3d3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ImageView

            android:id="@+id/image_filter_sales"
            android:padding="8dp"
            android:src="@drawable/icon_circle_red"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/view_filter_none"
            android:layout_alignLeft="@+id/view_filter_none"
            android:layout_alignStart="@+id/view_filter_none"
            android:layout_above="@+id/view_filter_sales" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_toRightOf="@+id/image_filter_sales"
            android:id="@+id/txt_filter_sales"
            android:text="Sales"
            android:layout_below="@+id/view_filter_none"
            android:textColor="#414141"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <View
            android:layout_below="@+id/txt_filter_sales"
            android:id="@+id/view_filter_sales"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#d3d3d3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ImageView

            android:id="@+id/image_filter_internl"
            android:padding="8dp"
            android:src="@drawable/icon_circle_blue"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/view_filter_sales"
            android:layout_alignLeft="@+id/view_filter_none"
            android:layout_alignStart="@+id/view_filter_none"
            android:layout_above="@+id/view_filter_internal" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_toRightOf="@+id/image_filter_internl"
            android:text="Interal follow-up"
            android:id="@+id/txt_filter_internal"
            android:layout_below="@+id/view_filter_sales"
            android:textColor="#414141"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <View
            android:id="@+id/view_filter_internal"
            android:layout_below="@+id/txt_filter_internal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#d3d3d3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ImageView

            android:id="@+id/image_filter_external"
            android:padding="8dp"
            android:src="@drawable/icon_circle_green"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/view_filter_internal"
            android:layout_alignLeft="@+id/view_filter_none"
            android:layout_alignStart="@+id/view_filter_none"
            android:layout_above="@+id/view_filter_external" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_toRightOf="@+id/image_filter_external"
            android:text="External follow-up"
            android:layout_below="@+id/view_filter_internal"
            android:id="@+id/txt_filter_external"
            android:textColor="#414141"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <View
            android:id="@+id/view_filter_external"
            android:layout_below="@+id/txt_filter_external"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#d3d3d3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ImageView

            android:id="@+id/image_filter_issues"
            android:padding="8dp"
            android:src="@drawable/icon_circle_yellow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/view_filter_external"
            android:layout_alignLeft="@+id/view_filter_none"
            android:layout_alignStart="@+id/view_filter_none"
            android:layout_above="@+id/view_filter_issues" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_toRightOf="@+id/image_filter_issues"
            android:layout_below="@+id/view_filter_external"
            android:id="@+id/txt_filter_issuse"
            android:text="Issues"
            android:textColor="#414141"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <View
            android:layout_below="@+id/txt_filter_issuse"
            android:id="@+id/view_filter_issues"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#d3d3d3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ImageView

            android:id="@+id/image_filter_collo"
            android:padding="8dp"
            android:src="@drawable/icon_circle_pink"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/view_filter_issues"
            android:layout_alignLeft="@+id/view_filter_issues"
            android:layout_alignStart="@+id/view_filter_issues"
            android:layout_above="@+id/view_filter_collo" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_toRightOf="@+id/image_filter_collo"
            android:id="@+id/txt_filter_collo"
            android:layout_below="@+id/view_filter_issues"
            android:text="Collaboration"
            android:textColor="#414141"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/txt_filter_collo"
            android:id="@+id/view_filter_collo"
            android:background="#d3d3d3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>





    </RelativeLayout>



</RelativeLayout>